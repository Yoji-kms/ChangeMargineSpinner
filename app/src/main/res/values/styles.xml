<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="SmallMarginTheme" parent="AppTheme">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>
    
    <style name="MediumMarginTheme" parent="AppTheme">
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="LargeMarginTheme" parent="AppTheme">
        <item name="android:layout_margin">@dimen/large_margin</item>
    </style>

</resources>